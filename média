nota1 = float (input ('Qual é sua primeira nota? '))
nota2 = float (input ('Qual é sua segunda nota? '))
nota3 = float (input ('Qual é sua terceira nota? '))
totalNotas = nota1+nota2+nota3
print ('A soma entre {}, {} e {} é:{}' .format(nota1, nota2, nota3, totalNotas)) 
media = totalNotas/3
if media >= 60:
    print (f'Sua média é {round(media, 2)} você está aprovado') 
else:
    print (f'Sua média é {round(media, 2)} você não está aprovado')
